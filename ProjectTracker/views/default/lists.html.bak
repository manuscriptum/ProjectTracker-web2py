{{extend 'layout.html'}}
<h1>All Lists</h1>
{{if len(grid):}}
<h3>
    Lists:
</h3>
<table class="table table-bordered">
    <tr><th>List Title</th><th>Date Created</th><th>Date Updated</th><th>Created By</th></tr>
    {{for list in grid:}}
        <tr><td>{{=A(T(list.title), _href=URL('list', args=list.id))}}</td><td>{{=list.date_created}}</td><td>{{=list.date_updated}}</td><td>{{=list.created_by.first_name + " " + list.created_by.last_name}}</td></tr>
    {{pass}}
</table>
{{else:}}
<h3>
    {{=I('No Lists Created')}}
</h3>
{{pass}}
<div class="btn-group btn-group-justified">
{{=A(T("Your Lists"), _href=URL('default','your_lists'), _class='btn btn-info', _style='margin-top: 1em;')}}
{{=A(T("New List"), _href=URL('default','new_list'), _class='btn btn-success', _style='margin-top: 1em;')}}
</div>
