{{extend 'layout.html'}}
<h1>Application Workspace</h1>
{{if len(grid):}}
<h3>
    Projects:
</h3>
<table class="table table-bordered">
    <tr><th>Project Title</th><th>Date Created</th><th>Date Updated</th><th>Created By</th></tr>
    {{for project in grid:}}
        <tr><td>{{=A(T(project.title), _href=URL('default','project', args=project.id))}}</td><td>{{=project.date_created}}</td><td>{{=project.date_updated}}</td><td>{{=get_user(project.created_by)}}</td></tr>
    {{pass}}
</table>
<div class="btn-group btn-group-justified">
{{=A(T("Your Projects"), _href=URL('default','user_projects'), _class='btn btn-info', _style='margin-top: 1em;')}}
{{=A(T("New Project"), _href=URL('default','new_project'), _class='btn btn-success', _style='margin-top: 1em;')}}
</div>
{{else:}}
<h3>
    {{=I('No Projects in the Workspace...')}}<br />
    {{=A(B(T('Create One!')), _href=URL('default','new_project'), _class='btn btn-success', _style='margin-top: 1em;')}}
</h3>
{{pass}}
