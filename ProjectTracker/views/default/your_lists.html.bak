{{extend 'layout.html'}}
<h1>Your Lists</h1>
{{if len(lists_created):}}
<h3>
    Lists Created:
</h3>
<table class="table table-bordered">
    <tr><th>List Title</th><th>Date Created</th><th>Date Updated</th></tr>
    {{for list in lists_created:}}
        <tr><td>{{=A(T(list.title), _href=URL('default','list', args=list.id))}}</td><td>{{=list.date_created}}</td><td>{{=list.date_updated}}</td></tr>
    {{pass}}
</table>
<br />
{{else:}}
<h3>
    {{=I('No Lists Created')}}
</h3>
{{pass}}
{{if len(assigned_items):}}
<h3>
    Assigned Actions:
</h3>
<table class="table table-bordered">
    <tr><th>List Link</th><th>Todo</th><th>Due Date</th><th>Date Created</th><th>Created By</th></tr>
    {{for item in assigned_items:}}
    <tr><td>{{=A(T("See List"), _href=URL('default', 'list', args=item.listing_id), _class="btn btn-primary")}}</td><td>{{=A(T(item.body), _href=URL('default', 'item', args=[item.listing_id, item.id]))}}</td><td>{{=item.due}}</td><td>{{=item.date_created}}</td><td>{{=item.created_by.first_name + " " + item.created_by.last_name}}</td></tr>
    {{pass}}
</table>
<br />
{{else:}}
<h3>
    {{=I('No Action Items Assigned to you')}}
</h3>
{{pass}}
{{if len(created_items):}}
<h3>
    Created Actions:
</h3>
<table class="table table-bordered">
    <tr><th>List Link</th><th>Todo</th><th>Assigned To</th><th>Due Date</th><th>Date Created</th></tr>
    {{for item in created_items:}}
    <tr><td>{{=A(T("See List"), _href=URL('default', 'list', args=item.listing_id), _class="btn btn-primary")}}</td><td>{{=A(T(item.body), _href=URL('default', 'item', args=[item.listing_id, item.id]))}}</td><td>{{=item.assign_to.first_name + " " + item.assign_to.last_name}}</td><td>{{=item.due}}</td><td>{{=item.date_created}}</td></tr>
    {{pass}}
</table>
<br />
{{else:}}
<h3>
    {{=I('No Actions Created by you')}}
</h3>
{{pass}}
{{=A(T("Create New List"), _href=URL('default','new_list'), _class='btn btn-primary', _style='margin-top: 1em;')}}
